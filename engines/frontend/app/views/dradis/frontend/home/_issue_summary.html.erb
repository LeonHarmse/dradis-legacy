<section class="inner summary-panel">
  <h2>Issues so far</h2>

  <% if @issues.any? %>
    <ul class="issue-list drop-target">
        <% for issue in @issues %>
          <%= content_tag_for :li, issue, data: {url: issue_path(issue, format: :json)} do %>
            <%= link_to issue.title, issue %>
          <% end %>
        <% end %>
    </ul>
  <% else %>
  <p class="no-content">There are no issues in this project yet.</p>
  <ul class="fa-ul">
    <li>Manually add an issue by clicking on <%= link_to issues_path() do %><i class="icon-bug"></i> All issues<% end %> in the sidebar</li>
    <li>or <%= link_to upload_manager_path do %><i class="icon-cloud-upload"></i> Upload output from tool<% end %> at the top.</li>
  </ul>
  <% end %>
</section>
