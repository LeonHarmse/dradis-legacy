<h2> <%= gemified[:name] %></h2>
<table>
  <thead>
    <tr>
      <th class="setting" scope="col">Setting Name</th>
      <th class="status" scope="col">Status</th>
      <th class="value" scope="col">Value</th>
    </tr>
  </thead>
  <tbody>
    <% gemified[:settings].each_with_index do |setting, index| %>
      <tr class="gemified">
        <td class="setting"><%= setting[:name] %></td>
        <td class="status"><%= setting[:default] ? 'default' : 'user set' %></td>
        <td class="value">
          <%= text_field_tag "#{ gemified[:name].underscore }_settings_#{ setting[:name] }", setting[:value] %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
